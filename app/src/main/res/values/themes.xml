<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TugasBesarPBP" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- no actionbar -->
    <style name="Theme.TugasBesarPBP.NoActionBar" parent="Theme.TugasBesarPBP">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- border radius 8dp -->
    <style name="Theme.TugasBesarPBP.BorderRadius8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.TugasBesarPBP.Splash" parent="Theme.TugasBesarPBP.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/tugu_yogya</item>-->
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>
</resources>